<h1>Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %> |
      <%= task.description %>
      <p>Deadline: <%= task.deadline %>
      <% if task.completed %>
        (completed)
      <% else %>
        (not completed)
      <% end %>
      <br>
    <%= link_to 'Show', task %> |
    <%= link_to 'Edit', edit_task_path(task) %> |
    <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </li>
  <% end %>

</ul>








