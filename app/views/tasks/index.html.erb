<h1>All Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Deadline</th>
      <th>Categories</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.deadline %></td>
        <td>
          <% task.categories.each do |category| %>
            <%= category.name %><br>
          <% end %>
        </td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Task', new_task_path %>

<br>

<%= form_tag tasks_path, method: :get do %>
  <%= label_tag :category_ids, "Categories" %>
  <% Category.all.each do |category| %>
    <div>
      <%= check_box_tag "category_ids[]", category.id, params[:category_ids].present? && params[:category_ids].include?(category.id.to_s) %>
      <%= label_tag "category_ids_#{category.id}", category.name %>
    </div>
  <% end %>
  <%= submit_tag "Filter" %>
<% end %>








