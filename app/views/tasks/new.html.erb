<h1>New Task</h1>

<%= form_with(model: @task, local: true) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :description %>
  <%= form.text_field :description %>

  <%= form.label :deadline %>
  <%= form.datetime_local_field :deadline %>

  <%= form.submit "Create Task" %>
<% end %>
